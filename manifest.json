{
  "name": "Safe Open",
  "version": "1.0",
  "description": "All your tabs are blurred when you open your laptop to avoid potential embarassment.",
  "manifest_version": 2,
  "background": { "scripts": ["background.js"] },
  "icons": {
    "16": "icona16.png",
    "48": "iconb48.png",
    "128": "iconb128.png"
  },
  "browser_action": {
     "default_icon": "iconb128.png",
     "default_title": "Safe Open"
   },
  "permissions": ["tabs", "http://*/*", "http://*/", "https://*/", "idle"]
}
